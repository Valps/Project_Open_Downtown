    ENDIF
          
    //XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
    //XXXXXXX   YAKUZA ASSASSIN 3   XXXXXXX
    //XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
          
    //  Yakuza 3 is on player screen
    IF ( ( z_h_2_assassin_3_died = 0 ) AND ( IS_ITEM_ONSCREEN(z_h_2_asssin_3_char) ) )
